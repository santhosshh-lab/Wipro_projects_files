server:
  port: 9000

spring:
  application:
    name: api-gateway

  cloud:
    gateway:
      routes:

        # USER SERVICE ROUTES
        - id: user-service
          uri: http://localhost:8081
          predicates:
            - Path=/users/**, /user/**, /playlists/**

        # ADMIN SERVICE ROUTES
        - id: admin-service
          uri: http://localhost:8082
          predicates:
            - Path=/admin/**, /songs/**

      default-filters:
        - DedupeResponseHeader=Access-Control-Allow-Origin Access-Control-Allow-Credentials

eureka:
  client:
    serviceUrl:
      defaultZone: http://localhost:8761/eureka/

jwt:
  secret: ThisIsAStrongSecretKeyWithAtLeast32Characters!!
