<script>
const API = "http://localhost:9000";
const alerts = id => document.getElementById(id);
async function fetchCounts() {
  try {
    const users = await (await fetch(API + '/admin/users')).json();
    const songs = await (await fetch(API + '/songs')).json();
    const visible = await (await fetch(API + '/songs/visible')).json();
    document.getElementById('usersCount').innerText = Array.isArray(users) ? users.length : 0;
    document.getElementById('songsCount').innerText = Array.isArray(songs) ? songs.length : 0;
    document.getElementById('visibleCount').innerText = Array.isArray(visible) ? visible.length : 0;
  } catch(e) {
    alerts('alerts').innerHTML = `<div class="alert alert-danger">Unable to load dashboard: ${e.message || e}</div>`;
  }
}
document.getElementById('logout').addEventListener('click', ()=>{ localStorage.removeItem('admin'); window.location.href='admin-login.html';});
fetchCounts();
</script>
