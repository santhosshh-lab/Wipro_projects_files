<!doctype html>
<html>
<head>
  <meta charset="utf-8"><title>My Playlists</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand bg-white mb-4 shadow-sm">
  <div class="container-fluid">
    <a class="navbar-brand" href="user-songs.html">My Playlists</a>
    <div><button id="logout" class="btn btn-sm btn-danger">Logout</button></div>
  </div>
</nav>

<div class="container">
  <div id="msg"></div>
  <div class="card p-3 mb-3">
    <div class="d-flex">
      <input id="name" class="form-control me-2" placeholder="Playlist name">
      <button id="create" class="btn btn-primary">Create</button>
    </div>
  </div>

  <div id="playlists" class="row g-3"></div>
</div>

<script>
const API = "http://localhost:9000";
const user = JSON.parse(localStorage.getItem('user')|| '{}');
if(!user.id) { alert('Please login'); location.href='user-login.html'; }
const uid = user.id;

async function load() {
  try {
    const data = await (await fetch(`${API}/users/${uid}/playlists`)).json();
    document.getElementById('playlists').innerHTML = data.map(p => `
      <div class="col-md-6">
        <div class="card p-3">
          <div class="d-flex justify-content-between">
            <div><strong>${p.name}</strong><div class="small text-muted">${p.description||''}</div></div>
            <div>
              <button class="btn btn-sm btn-outline-primary" onclick="openPlaylist(${p.id})">Open</button>
              <button class="btn btn-sm btn-outline-danger" onclick="del(${p.id})">Delete</button>
            </div>
          </div>
        </div>
      </div>
    `).join('');
  } catch(e) { document.getElementById('msg').innerHTML = `<div class="alert alert-danger">Load error: ${e.message||e}</div>`; }
}

document.getElementById('create').addEventListener('click', async () => {
  const body = { name: document.getElementById('name').value, description: '' };
  if(!body.name) return alert('Enter a name');
  await fetch(`${API}/users/${uid}/playlists`, { method:'POST', headers:{'Content-Type':'application/json'}, body: JSON.stringify(body) });
  document.getElementById('name').value = '';
  load();
});

window.openPlaylist = async (pid) => {
  // open in new window with songs list
  const w = window.open('', '_blank');
  const html = `<html><head><title>Playlist ${pid}</title><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"></head><body><div class="p-3"><h4>Playlist ${pid}</h4><div id="songs">Loading...</div></div><script>
  (async()=>{ const res=await fetch('${API}/users/${uid}/playlists/${pid}/songs'); const data=await res.json(); document.getElementById('songs').innerHTML=data.map(s=>'<div class="card p-2 mb-2"><div><strong>'+s.name+'</strong> - '+(s.singer||'')+'</div><div class="mt-2"><button onclick="fetch(\\'${API}/users/${uid}/playlists/${pid}/songs/'+s.id+'\\',{method:\\'DELETE\\'}).then(()=>location.reload())" class="btn btn-sm btn-danger'>Remove</button></div></div>').join('') })();
  </script></body></html>`;
  w.document.write(html);
};

window.del = async (pid) => { if(!confirm('Delete playlist?')) return; await fetch(`${API}/users/${uid}/playlists/${pid}`, { method:'DELETE' }); load(); }

document.getElementById('logout').addEventListener('click', ()=>{ localStorage.removeItem('user'); location.href='user-login.html';});
load();
</script>
</body>
</html>
