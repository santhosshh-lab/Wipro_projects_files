<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>All Songs</title>
    <link rel="stylesheet" th:href="@{/css/style.css}">
</head>
<body>

<h2>Available Songs</h2>
<div id="songs"></div>

<script>
async function loadSongs() {
    let res = await fetch("http://localhost:8081/users/songs");
    let songs = await res.json();

    let html = "";
    songs.forEach(s => {
        html += `
            <div class="card">
                <h3>${s.name}</h3>
                <p>Singer: ${s.singer}</p>
                <p>Album: ${s.albumName}</p>
            </div>`;
    });

    document.getElementById("songs").innerHTML = html;
}

loadSongs();
</script>

</body>
</html>
